<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Telegram Feed</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
    }
    .message {
      border: 1px solid #ddd;
      margin-bottom: 10px;
      padding: 10px;
      background: #f9f9f9;
    }
  </style>
</head>
<body>
  <h2>ðŸ“¢ Telegram Channel Feed</h2>
  <div id="feed"></div>

  <script>
    fetch('/messages')
      .then(response => response.json())
      .then(data => {
        const container = document.getElementById('feed');
        data.forEach(msg => {
          const div = document.createElement('div');
          div.className = 'message';
          div.innerHTML = `<strong>${msg.date}</strong><br>${msg.text}`;
          container.appendChild(div);
        });
      });
  </script>
</body>
</html>
